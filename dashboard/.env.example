# Environment Configuration Example
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# OPTIONAL VARIABLES (with defaults)
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000

# WebSocket Configuration (for real-time updates)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000

# Mapbox Configuration (for map visualizations)
# Get your token from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=false
NEXT_PUBLIC_ENABLE_MAPS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Data Refresh Intervals (milliseconds)
# Current AQI: 5 minutes (300000ms)
NEXT_PUBLIC_REFRESH_INTERVAL_CURRENT=300000
# Forecast: 1 hour (3600000ms)
NEXT_PUBLIC_REFRESH_INTERVAL_FORECAST=3600000
# Historical: 24 hours (86400000ms)
NEXT_PUBLIC_REFRESH_INTERVAL_HISTORICAL=86400000

# Cache Configuration (milliseconds)
NEXT_PUBLIC_CACHE_CURRENT_AQI=300000
NEXT_PUBLIC_CACHE_FORECAST=3600000
NEXT_PUBLIC_CACHE_HISTORICAL=86400000

# Performance
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Debug Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# =============================================================================
# ENVIRONMENT-SPECIFIC URLS
# =============================================================================

# Local Development:
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Staging:
# NEXT_PUBLIC_API_BASE_URL=https://staging-api.aqi-predictor.com

# Production:
# NEXT_PUBLIC_API_BASE_URL=https://api.aqi-predictor.com
