# Streamlit Cloud Secrets Configuration
# Copy this file to secrets.toml and fill in your actual values
# In Streamlit Cloud, add these secrets through the web interface

[api]
base_url = "https://api.aqi-predictor.example.com"
timeout = 30

[openweather]
api_key = "your_openweather_api_key_here"

[database]
# Optional: Direct database access (not recommended for production)
# url = "postgresql://user:password@host:5432/database"

[auth]
# Optional: If using authentication
# jwt_secret = "your_jwt_secret_here"

[monitoring]
# Optional: Sentry for error tracking
# sentry_dsn = "your_sentry_dsn_here"
