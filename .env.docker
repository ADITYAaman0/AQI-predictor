# Docker environment configuration for AQI Predictor
# Copy this file to .env.local and customize for your environment

# Database Configuration
POSTGRES_DB=aqi_predictor
POSTGRES_USER=aqi_user
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql+asyncpg://aqi_user:secure_password_change_me@timescaledb:5432/aqi_predictor

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=redis_password_change_me

# Application Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=jwt_secret_key_change_in_production

# API Keys (required for data sources)
OPENWEATHER_API_KEY=your_openweather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
CPCB_API_KEY=your_cpcb_api_key

# Rate Limiting
RATE_LIMIT_ANONYMOUS=1000
RATE_LIMIT_AUTHENTICATED=5000

# External Services
API_BASE_URL=http://localhost:8000
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Monitoring
GRAFANA_PASSWORD=admin_password_change_me

# SSL/TLS (for production)
ENFORCE_HTTPS=false

# Environment
ENVIRONMENT=development