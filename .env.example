# =============================================================================
# AQI Predictor - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------

# OpenWeatherMap API Key
# Get yours at: https://openweathermap.org/api (free tier available)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Debug mode (true/false)
DEBUG=false

# Default city for initial display
# Options: Delhi, Mumbai, Bangalore, Chennai, Kolkata, Hyderabad
DEFAULT_CITY=Delhi

# Default coordinates (latitude,longitude) - Delhi coordinates
DEFAULT_LOCATION=28.6139,77.2090

# -----------------------------------------------------------------------------
# Alert Settings (Optional)
# -----------------------------------------------------------------------------

# Email for AQI threshold alerts (leave empty to disable)
ALERT_EMAIL=

# AQI threshold for alerts (default: 150 - Unhealthy)
ALERT_THRESHOLD=150

# SMTP settings for email alerts (if ALERT_EMAIL is set)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# -----------------------------------------------------------------------------
# Data Settings
# -----------------------------------------------------------------------------

# Cache duration in seconds (default: 5 minutes)
CACHE_DURATION=300

# Number of days of historical data to fetch
HISTORICAL_DAYS=7

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------

# Path to pre-trained model (leave empty to use default)
MODEL_PATH=

# Forecast horizon in hours
FORECAST_HOURS=24
